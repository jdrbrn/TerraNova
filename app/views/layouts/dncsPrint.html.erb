<% content_for :stylesheets do %>
  body, th, td {
    background-color:white
  }

  div.cardContainer{
    padding-top:10px;
    page-break-inside: avoid
  }

  div.dncCard{
    width:<%= TerraNovaConfig["dncCSS"]["dncCardWidth"] %>;
    margin:0;
    padding:0px;
    outline:1px solid black;
    outline-offset: 9px;
    display:table;
    page-break-inside: avoid
  }

  div.cardTitle{
    display:inline-block;
    font-size:20px;
    font-weight:bold
  }

  table.dateTable,
  table.dateTable tr,
  table.dateTable td{
      border:0px;
      padding:0px
  }

  table.dncTable{
     width:<%= TerraNovaConfig["dncCSS"]["dncCardWidth"] %>;
  }

  table.dncTable,
  table.dncTable td{
     font-size:10px
  }
<% end %>

<%= render template: "layouts/application" %>
