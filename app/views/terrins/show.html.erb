<div style="position:fixed;top:5px;left:5px">
  <p id="notice"><%= notice %></p>

  <% terr=Terr.all.find(@terrin.terrid) %>
  <h1><%= terr.region %> - <%= terr.name %></h1>
  <h3>Last Completed: <%= terr.datecomp %></h3>

  <p>
    <strong>Status:</strong> Checked In
  </p>

  <p>
    <strong>Notes:</strong>
    <%= terr.notes %>
  </p>

  </p>
    <strong>DNCs:</strong>
    <% @dncs=Dnc.all.select{|dnc| dnc.terrid==terr.id}.sort_by{|dnc| [dnc.street, dnc.number.to_i]} %>
    <table>
    	<thead>
    		<tr>
          <th>Date</th>
          <th>Name</th>
    			<th>Number</th>
    			<th>Street</th>
    			<th>Publisher</th>
    			<th>Notes</th>
          <td><%= link_to 'New DNC', {:controller => "dncs", :action => "new", :terrid => terr.id, :terrtype => "terrins", :redirid => @terrin.id} %></td>
          <td><a href='/dncs/print?terr=<%= @terrin.terrid %>' target='_blank'>Print DNC List</a></td>
    		</tr>
    	</thead>

    	<tbody>
    		<% @dncs.each do |dnc| %>
    			<% if dnc.notes.include?("Territory") %>
            <tr style="color: blue">
          <% else %>
            <tr>
          <% end %>
            <td><%= "#{dnc.date.month}/#{dnc.date.day}/#{dnc.date.year}" %></td>
            <td><%= dnc.name %></td>
    				<td><%= dnc.number %></td>
    				<td><%= dnc.street %></td>
    				<td><%= dnc.publisher %></td>
    				<td><%= dnc.notes %></td>
    			</tr>
    		<% end %>
    	</tbody>
    </table>
  </p>

  <p>
    <strong>History:</strong>
    <table>
      <% terr.history.reverse.each do |entry| %>
        <tr>
          <% entry.each do |detail| %>
            <td><%= detail %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </p>

  <%# link_to 'Edit', edit_terrin_path(@terrin) %>
  <%# link_to 'Back', terrins_path %>
</div>
