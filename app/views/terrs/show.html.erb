<div style="position:fixed;left:5px;top:5px">
  <p id="notice"><%= notice %></p>
  <h1><%= @terr.region %> - <%= @terr.name %></h1>
  <h3>Last Completed: <%= @terr.datecomp %></h3>

  <p>
    <strong>Status:</strong> Unknown
  </p>

  <p>
    <strong>Notes:</strong>
    <%= @terr.notes %>
  </p>

  </p>
    <strong>DNCs:</strong>
    <% @dncs=Dnc.all.select{|dnc| dnc.terrid==@terr.id}.sort_by{|dnc| [dnc.street, dnc.number.to_i]} %>
    <table>
    	<thead>
    		<tr>
          <th>Date</th>
          <th>Name</th>
    			<th>Number</th>
    			<th>Street</th>
    			<th>Publisher</th>
    			<th>Notes</th>
          <td><%= link_to 'New DNC', {:controller => "dncs", :action => "new", :terrid => @terr.id, :terrtype => "terrs", :redirid => @terr.id} %></td>
          <td><a href='/dncs/print?terr=<%= @terr.id %>' target='_blank'>Print DNC List</a></td>
    		</tr>
    	</thead>

    	<tbody>
    		<% @dncs.each do |dnc| %>
          <% if dnc.notes.include?("Territory") %>
            <tr style="color: blue">
          <% else %>
            <tr>
          <% end %>
            <td><%= "#{dnc.date.month}/#{dnc.date.day}/#{dnc.date.year}" %></td>
            <td><%= dnc.name %></td>
    				<td><%= dnc.number %></td>
    				<td><%= dnc.street %></td>
    				<td><%= dnc.publisher %></td>
    				<td><%= dnc.notes %></td>
            <td><%= link_to 'Edit', {:controller => "dncs", :action => "edit", :id => dnc.id, :terrtype => "terrs",:redirid => @terr.id} %></td>
            <td><%= link_to 'Delete', [dnc,terrtype: "terrs",redirid: @terr.id], method: :delete, data: { confirm: "Are you sure you want to delete?" } %></td>
    			</tr>
    		<% end %>
    	</tbody>
    </table>
  </p>

  <p>
    <strong>History:</strong>
    <%= @terr.history %>
    <table>
      <% @terr.history.reverse.each do |entry| %>
        <tr>
          <% entry.each do |detail| %>
            <td><%= detail %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </p>

  <%# link_to 'Edit', edit_terr_path(@terr) %>
  <%# link_to 'Back', terrs_path %>
</div>
