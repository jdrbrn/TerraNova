<p id="notice"><%= notice %></p>

<h1>Terrouts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Last Complete</th>
      <th>Publisher</th>
      <th>Dateout</th>
      <th>Datedue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terrouts.each do |terrout| %>
      <% terr=Terr.all.find(terrout.terrid) %>
      <tr>
        <td><%= terr.name %></td>
        <td><%= terr.region %></td>
        <td><%= terr.datecomp.strftime("%m/%d/%y") %></td>
        <td><%= terrout.publisher %></td>
        <td><%= terrout.dateout %></td>
        <td><%= terrout.datedue %></td>
        <td><%= link_to 'Show', terrout %></td>
        <td><%= link_to 'Edit', edit_terrout_path(terrout) %></td>
        <td><%= link_to 'Destroy', terrout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Terrout', new_terrout_path %>
