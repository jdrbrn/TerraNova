<div style="position:relative;left:-28px;top:-10px">
  <p id="notice"><%= notice %></p>
  <% terr=Terr.all.find(@terrout.terrid) %>
  <h1><%= terr.region %> - <%= terr.name %></h1>
  <h3>Last Completed: <%= terr.datecomp.strftime("%m/%d/%y") %></h3>

  <p>
    <strong>Status:</strong> Checked Out
    <table>
      <thead>
        <tr>
          <th>Publisher</th>
          <th>Date Out</th>
          <th>Date Due</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @terrout.publisher %></td>
          <td><%= @terrout.dateout.strftime("%m/%d/%y") %></td>
          <td><%= @terrout.datedue.strftime("%m/%d/%y") %></td>
        </tr>
      </tbody>
    </table>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= terr.notes %>
  </p>

  </p>
    <strong>DNCs:</strong>
    <% @dncs=Dnc.all.select{|dnc| dnc.terrid==terr.id}.sort_by{|dnc| [dnc.street, dnc.number.to_i]} %>
    <table>
    	<thead>
    		<tr>
          <th>Date</th>
          <th>Name</th>
    			<th>Number</th>
    			<th>Street</th>
    			<th>Publisher</th>
    			<th>Notes</th>
          <td><%= link_to 'New DNC', {:controller => "dncs", :action => "new", :terrid => terr.id, :terrtype => "terrouts", :redirid => @terrout.id} %></td>
          <td><a href='/dncs/print?terr=<%= @terrout.terrid %>' target='_blank'>Print DNC List</a></td>
    		</tr>
    	</thead>

    	<tbody>
    		<% @dncs.each do |dnc| %>
          <% if dnc.notes.include?("Territory") %>
            <tr style="color: blue">
          <% else %>
            <tr>
          <% end %>
            <td><%= "#{dnc.date.month}/#{dnc.date.day}/#{dnc.date.year}" %></td>
            <td><%= dnc.name %></td>
    				<td><%= dnc.number %></td>
    				<td><%= dnc.street %></td>
    				<td><%= dnc.publisher %></td>
    				<td><%= dnc.notes %></td>
            <td><%= link_to 'Edit', {:controller => "dncs", :action => "edit", :id => dnc.id, :terrtype => "terrouts",:redirid => @terrout.id} %></td>
            <td><%= link_to 'Delete', [dnc,terrtype: "terrouts",redirid: @terrout.id], method: :delete, data: { confirm: "Are you sure you want to delete?" } %></td>
    			</tr>
    		<% end %>
    	</tbody>
    </table>
  </p>

  <p>
    <strong>History:</strong>
    <table>
      <% terr.history.reverse.each do |entry| %>
        <tr>
          <% entry.each do |detail| %>
            <td><%= detail %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </p>

  <%# link_to 'Edit', edit_terrout_path(@terrout) %>
  <%# link_to 'Back', terrouts_path %>
</div>
