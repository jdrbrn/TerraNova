<p id="notice"><%= notice %></p>

<% terr=Terr.all.find(@terrout.terrid) %>
<h1><%= terr.region %> - <%= terr.name %></h1>
<h3>Last Completed: <%= terr.datecomp %></h3>

<p>
  <strong>Status:</strong> Checked Out
  <table>
    <thead>
      <tr>
        <th>Publisher</th>
        <th>Date Out</th>
        <th>Date Due</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @terrout.publisher %></td>
        <td><%= @terrout.dateout %></td>
        <td><%= @terrout.datedue %></td>
      </tr>
    </tbody>
  </table>
</p>

<p>
  <strong>Notes:</strong>
  <%= terr.notes %>
</p>

</p>
  <strong>DNCs:</strong>
  <% @dncs=Dnc.all.select{|dnc| dnc.terrid==terr.id} %>
  <table>
  	<thead>
  		<tr>
  			<th>Number</th>
  			<th>Street</th>
  			<th>Name</th>
  			<th>Publisher</th>
  			<th>Date</th>
  			<th>Notes</th>
        <td><a href>New DNC</a></td>
  		</tr>
  	</thead>

  	<tbody>
  		<% @dncs.each do |dnc| %>
  			<tr>
  				<td><%= dnc.number %></td>
  				<td><%= dnc.street %></td>
  				<td><%= dnc.name %></td>
  				<td><%= dnc.publisher %></td>
  				<td><%= dnc.date %></td>
  				<td><%= dnc.notes %></td>
  			</tr>
  		<% end %>
      <!-- add blank rows -->
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
  	</tbody>
  </table>
</p>

<p>
  <strong>History:</strong>
  <%= terr.history %>
</p>

